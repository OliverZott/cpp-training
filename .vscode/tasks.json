{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-cpp-project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                // "${fileDirname}/*.cpp",
                "${fileDirname}/*.cc",
                "-o",
                "${fileDirname}/main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build-cpp-file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make", // this is assuming the makefile contains a "all: main" command so it calls main-build step if no args provided
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}